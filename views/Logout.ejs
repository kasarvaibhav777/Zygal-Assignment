<div>
  <!-- Form 1: Submit text message -->
  <form action="/submit_cookies" method="POST">
    <label for="messageText">Submit text message</label><br />
    <input type="text" name="messageText" id="messageText" />
    <br />
    <button type="submit">Submit</button>
  </form>

  <!-- Form 2: Search text message -->
  <form action="/search_cookies" method="GET">
    <label for="searchMessageText">Search text message</label><br />
    <input type="text" name="searchMessageText" id="searchMessageText" />
    <br />
    <button type="submit">Submit</button>
  </form>

  <label>Show searched text message here</label><br />
  <textarea name="searchedMessageText" id="" cols="30" rows="10"><%=data %></textarea>

  <!-- Form 3: Clear all -->
  <form action="/clear_cookies" method="POST">
    <button type="submit">Clear all</button>
  </form>
</div>
